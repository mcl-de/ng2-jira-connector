{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "src",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "es2015",
		"moduleResolution": "node",
		"outDir": "./dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"stripInternal": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
		"e2e",
		"src/environments",
		"src/main.ts",
		"src/polyfills.ts",
		"src/test.ts",
		"src/**/*.spec.ts"
	],
	"angularCompilerOptions": {
		"annotateForClosureCompiler": true,
		"strictMetadataEmit": true,
		"skipTemplateCodegen": true,
		"flatModuleId": "jiraconnector"
	}
}
